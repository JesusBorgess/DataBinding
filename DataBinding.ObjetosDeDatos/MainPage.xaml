<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBinding.ObjetosDeDatos.MainPage"
             Title="DataBinding a un odjeto de datos">

    <Grid
Margin="24">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <VerticalStackLayout
           Grid.Row="0"
           Grid.Column="0">


            <Label
             Text="Conteo:"
              FontSize="Medium"/>

            <Border
              Stroke="Gray"
              Margin="0,24">

                <Label
                  Text="{Binding Path=Conteo}"
                  Margin="0,24"   
                  HorizontalOptions="Center"
                 FontSize="Large"
                 FontAttributes="Bold"/>
            </Border>

        </VerticalStackLayout>

        <HorizontalStackLayout
           Grid.Row="1"
           Grid.Column="0" 
           Spacing="36"
          HorizontalOptions="Center">
            <Button
             Text="Contar"
             FontSize="Medium"
              WidthRequest="120"
              Clicked="Button_Clicked"/>
            <Button
             Text="Reiniciar"
             FontSize="Medium"
             WidthRequest="120"
             Clicked="Button_Clicked_1"/>
        </HorizontalStackLayout>

    </Grid>

</ContentPage>
